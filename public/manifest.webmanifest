{
  "name": "TeleKram",
  "description": "A Telegram client for KaiOS using Svelte and TypeScript.",
  "start_url": "/index.html",
  "theme": "#ff3e00",
  "theme_color": "#ff3e00",
  "background_color": "#ff3e00",
  "display": "fullscreen",
  "orientation": "default",
  "categories": [
    "utilities"
  ],
  "icons": [
    {
      "src": "/icons/icon56x56.png",
      "type": "image/png",
      "sizes": "56x56"
    },
    {
      "src": "/icons/icon112x112.png",
      "type": "image/png",
      "sizes": "112x112"
    }
  ],
  "b2g_features": {
    "version": "3.0.0",
    "type": "privileged",
    "core": true,
    "default_locale": "en-US",
    "developer": {
      "name": "arma7x",
      "url": "https://github.com/arma7x/svelte-telekram"
    },
    "chrome": {
      "statusbar": "overlap"
    },
    "origin": "svelte-telekram",
    "permissions": {
      "systemXHR": {
        "description": "Required to load remote content"
      }
    },
    "dependencies": {},
    "locales": {
      "en-US": {
        "name": "TeleKram",
        "subtitle": "A Telegram client for KaiOS using Svelte and TypeScript.",
        "description": "A Telegram client for KaiOS using Svelte and TypeScript."
      }
    }
  }
}
